{
 "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true
}
